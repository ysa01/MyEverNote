@using MyEvernote.Entities
@model List<Note>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content -->
<div class="container">

    <div class="row">
        <!--Kategoriler-->
        <div class="col-lg-3">
@Html.Partial("_PartialCategories")
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <!--Corousel-->
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                <!--Notlar burdan başlıyor-->
                @foreach (Note note in Model)
                {<div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt="@note.Title"></a>
                            <div class="card-body">
                                <h6>
                                    <span><i class="fa fa-user"></i>  @note.ModifiedUsername</span><br />
                                    <span><i class="far fa-clock"></i>  @note.ModifiedOn.ToString("dd.MM.yy HH:mm")</span><br />
                                </h6>
                                <h4 class="card-title">
                                    <a href="#">
                                        @if (string.IsNullOrEmpty(note.Title) == false && note.Title.Length > 10)
                                        {
                                            
                                                @(note.Title.Substring(0,10)+"...")
                                           
                                            
                                        }
                                        else
                                        {
                                           
                                                @note.Title
                                        
                                        }
                                    </a>
                                </h4>

                                @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length >50)
                                {
                                    <p class="card-text">
                                        @(note.Text.Substring(0,50)+"...")
                                    </p>
                                    <p class="fa-pull-right"> <a href="" class="btn btn-dark btn-sm">Devamı  <i class="fas fa-angle-double-right"></i></a></p>
                                }
                                else
                                {
                                    <p class="card-text">
                                        @note.Text
                                    </p>
                                }

                            </div>
                            <div class="card-footer rating shadow-sm">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="text-sm-left">
                                            <button class="btn btn-outline-dark btn-sm" type="button"><i class="far fa-star"></i>@note.LikeCount</button>
                                        </p>
                                    </div>
                                    <div class="col-sm-6">
                                        <button class="btn btn-outline-dark btn-sm " type="button"><i class="far fa-comments"></i>Yorum</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }



            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
@section footer{
    @Html.Partial("_PartialFooter")}