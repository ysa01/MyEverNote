@using MyEvernote.BusinessLayer
@using MyEvernote.Entities

@{
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}

<h1 class="my-4">Kategoriler</h1>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item text-dark"><i class="fas fa-arrow-circle-right"></i>  Tümü</a>
    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item text-dark"><i class="fas fa-arrow-circle-right"></i> @cat.Title</a>
        
    }
</div>